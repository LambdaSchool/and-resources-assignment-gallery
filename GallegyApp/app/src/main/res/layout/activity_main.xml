<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



        <LinearLayout
                style="@style/VerticalColumn"
                android:id="@+id/column_left"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/left_column_image"
                    style="@style/custom_image"
                    android:src="@drawable/colorful_colourful_houses_2501965"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </LinearLayout>


        <LinearLayout
                style="@style/VerticalColumn"
                android:orientation="horizontal"
                android:id="@+id/column_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView

                    android:id="@+id/right_column_image"
                    style="@style/custom_image"
                    android:src="@drawable/wallpaper_astronomy_astrophotography_2538107"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="TODO"/>

        </LinearLayout>


    </LinearLayout>



</ScrollView>